<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="AppTheme.Base">
        <!-- Customize your theme here. -->
    </style>

    <style name="AppTheme.Base" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="colorButtonNormal">@color/accent</item>
    </style>

    <style name="AppThemeBase" parent="Theme.AppCompat.Light">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="colorButtonNormal">@color/accent</item>
        <item name="actionOverflowMenuStyle">@style/CMOptionsMenu</item>
        <item name="android:textColorPrimary">@color/actionBarTextColor</item>
        <item name="actionBarStyle">@style/MyActionBarStyle</item>
        <!-- Pre-lolipop -->
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="AppThemeSecond" parent="AppThemeBase">
        <!-- Customize your theme here. -->
        <item name="colorAccent">#F06292</item>
    </style>

    <style name="MyActionBarStyle" parent="@style/Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <!-- remove shadow below action bar -->
        <item name="elevation">0dp</item>
    </style>

    <style name="CMOptionsMenu" parent="Widget.AppCompat.PopupMenu.Overflow">
        <item name="android:popupBackground">@color/primary_dark</item>
    </style>

    <style name="CMOptionsMenu_second" parent="Widget.AppCompat.PopupMenu.Overflow">
        <item name="android:popupBackground">@color/primary_dark_second</item>
    </style>

    <style name="MyAlertDialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <!-- Used for the buttons -->
        <item name="colorAccent">@color/accent</item>
        <!-- Used for the title and text -->
        <item name="android:textColorPrimary">@color/actionBarTextColor</item>
        <!-- Used for the background -->
        <item name="android:background">@color/primary_dark</item>
    </style>

</resources>
